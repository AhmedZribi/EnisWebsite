@model UserSpecialityViewModel

@{
	ViewData["Title"] = "Manage Speciality";
}

<form method="post">
	<div class="card mt-4">
		<div class="card-header">
			<h2>@Model.UserName</h2>
			Add/Remove Speciality
		</div>
		<div class="card-body">
			<input type="hidden" asp-for="UserId" />
			@for (int i = 0; i < Model.Specialities.Count; i++) {
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model.Specialities[i].SpecialityName" />
					<input asp-for="@Model.Specialities[i].IsSelected" class="form-check-input" />
					<label class="form-check-label" asp-for="@Model.Specialities[i].IsSelected">
						@Model.Specialities[i].SpecialityName
					</label>
				</div>
			}
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
		<div class="card-footer">
			<button type="submit" class="btn btn-success">Save</button>
			<a asp-action="Index" class="btn btn-primary">Cancel</a>
		</div>
	</div>
</form>
