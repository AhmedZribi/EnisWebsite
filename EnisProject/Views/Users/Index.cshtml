@model IEnumerable<UserViewModel>

@{
	ViewData["Title"] = "Users";
}

<h1>Users</h1>

<a class="btn btn-primary" asp-controller="Users" asp-action="Add">New User</a>

<table class="table table-stripped mt-4">
	<thead>
		<tr class="bg-primary text-white">
			<th>First Name</th>
			<th>Last Name</th>
			<th>UserName</th>
			<th>Email</th>
			<th>Roles</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model) {
			<tr>
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.UserName</td>
				<td>@user.Email</td>
				<td>@string.Join(" , ", user.Roles.ToList())</td>
				<td>
					<a class="btn btn-secondary" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.UserId">Manage Roles</a>
				</td>
			</tr>
		}
	</tbody>
</table>